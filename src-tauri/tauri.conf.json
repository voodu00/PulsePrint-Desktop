{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "PrintPulse",
	"version": "0.1.0",
	"identifier": "com.printpulse.desktop",
	"build": {
		"frontendDist": "../frontend-react/build",
		"devUrl": "http://localhost:3000",
		"beforeDevCommand": "yarn --cwd ../frontend-react start",
		"beforeBuildCommand": "yarn --cwd ../frontend-react build"
	},
	"app": {
		"windows": [
			{
				"title": "PrintPulse Desktop",
				"width": 1400,
				"height": 900,
				"minWidth": 1200,
				"minHeight": 800,
				"resizable": true,
				"fullscreen": false
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
